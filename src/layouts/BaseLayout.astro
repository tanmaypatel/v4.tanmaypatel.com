---
import '@fontsource/roboto';
import '@fontsource/roboto/700.css';
import '@fontsource/roboto-slab';
import '@fontsource/source-code-pro';
import '@fontsource/lato';
import '@fontsource/lato/900.css';

import BaseHead from '../components/BaseHead.astro';
import Intro from '../components/Intro.astro';
import Sidebar from '../components/Sidebar.astro';

import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

import '../styles/base.scss';
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body class="max-w-none">
        <div class="grid lg:grid-cols-12 grid-cols-1">
            <header class="fixed w-full lg:static lg:col-span-3 bg-default-background-pattern lg:bg-none shadow-lg lg:shadow-none">
                <div class="lg:sticky lg:top-0 px-6 py-4 lg:p-0 lg:py-0 lg:pt-16">
                    <Intro />
                </div>
            </header>
            <main class="lg:col-span-6">
                <div class="my-24 lg:my-24 px-8 py-6 bg-white box-border shadow-md lg:border-t-2 lg:border-sky-400">
                    <slot />
                </div>
            </main>
            <aside class="fixed w-full lg:static lg:col-span-3">
                <div class="lg:sticky lg:top-0 lg:pt-24">
                    <Sidebar />
                </div>
            </aside>
        </div>
        <style lang="scss" is:global>
            body {
                @apply lg:bg-default-background-pattern m-0 h-full;
            }
        </style>
    </body>
</html>
